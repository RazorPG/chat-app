# Copy this file to .env and fill values for local development

# MongoDB connection string (MongoDB Atlas free tier)
# Example: mongodb+srv://<user>:<password>@cluster0.abcde.mongodb.net/mydb?retryWrites=true&w=majority
MONGODB_URI=

# JWT secret used to sign tokens (choose a long random string)
JWT_SECRET=change-me-replace-with-long-random

# Cloudinary (optional) - used for image/video uploads
# Example: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=

# Pusher (free tier) - real-time messaging (optional)
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=

# SendGrid API Key (REQUIRED for 2-step verification OTP emails)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SendGrid verified sender email (must be verified in SendGrid dashboard)
# Go to: https://app.sendgrid.com/settings/sender_auth/senders
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Port (optional)
PORT=3000
